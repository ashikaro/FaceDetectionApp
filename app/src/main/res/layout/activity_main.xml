<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:id="@+id/relativeLayout" android:background="#F9FCFA">


    <ImageView
            android:id="@+id/imageView"
            android:contentDescription="@string/todo"
            android:layout_width="377dp"
            android:layout_height="287dp"
            android:layout_alignTop="@+id/textView" android:layout_marginTop="40dp"/>

    <Button
            android:id="@+id/fdbutton"
            android:text="@string/blur"
            android:layout_width="395dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/imageView" android:textSize="18sp" android:textColor="#AD174B"/>
    <Button
            android:id="@+id/button2"
            android:layout_marginTop="65dp"
            android:text="@string/unblur"
            android:layout_width="385dp"
            android:layout_height="120dp"
            android:layout_marginBottom="163dp"
            android:layout_below="@+id/fdbutton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-6dp" android:textSize="24sp" android:textColor="#9E1342"/>
    <TextView
            android:text="@string/smileprob"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_below="@id/button3"
            android:textSize="18sp" android:textStyle="bold" android:textColor="#850B34"
            android:lineSpacingExtra="0sp" android:textAlignment="viewStart"/>
    <Button
            android:text="@string/detect_face"
            android:layout_width="384dp"
            android:layout_height="66dp"
            android:id="@+id/button3" android:textColor="#850F37"/>

</RelativeLayout>